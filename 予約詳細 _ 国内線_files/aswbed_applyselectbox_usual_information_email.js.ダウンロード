/**
 * セレクト要素の値を関連するインプット要素に適用するメソッド<br>
 *
 */
$(function () {
    'use strict';
    var customerGroupClass = '.customerGroup';
    var targetSelectClass = '.basicWidth';
    var linkageClass = '.linkageElement';
    var $select = $(targetSelectClass);
    
    $select.on('change', function() {
      $(this).closest(customerGroupClass).find(linkageClass).find('input').val($(this).val());
    });
});